<Window x:Class="TecheartSln.Main.ToolsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TecheartSln.Main"
        mc:Ignorable="d"
        Title="插件注册的工具列表" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Path=Tools}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=IsVisible, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=CanUninstall}"></CheckBox>
                        <Label Content="{Binding Path=Name}" HorizontalContentAlignment="Center"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
